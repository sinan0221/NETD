<style>
/* ===== Section Styling ===== */
section {
  padding: 40px 20px;
  background-color: #f2f6fa;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
}

/* ===== Container (make it wider) ===== */
.container {
  background: #fff;
  padding: 25px;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.08);
  max-width: 95%;    
  margin: auto;
}

/* ===== Heading ===== */
.container h2 {
  color: #1f3555;
  font-weight: 700;
  margin-bottom: 20px;
  text-align: center;
  border-bottom: 2px solid #2d4a70;
  padding-bottom: 10px;
  font-size: 26px;
  letter-spacing: 1px;
}

/* ===== Filter Buttons ===== */
.filter-buttons {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-bottom: 20px;
}

.filter-buttons .btn {
  min-width: 120px;
}

/* ===== Status Badges ===== */
.status-badge {
  padding: 4px 10px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
}

.status-active {
  background-color: #d4edda;
  color: #155724;
}

.status-inactive {
  background-color: #f8d7da;
  color: #721c24;
}

/* ===== Table ===== */
.table {
  margin-top: 20px;
  border-radius: 8px;
  overflow: hidden;
  background: #fff;
  width: 100%;
}

.table thead th {
  background: #1f3555;
  color: #fff;
  font-weight: 600;
  text-align: center;
  font-size: 15px;
  padding: 14px;
}

.table tbody td {
  text-align: center;
  vertical-align: middle;
  padding: 14px;
  font-size: 15px;
  color: #333;
  border-bottom: 1px solid #eee;
}

.table tbody tr:hover {
  background-color: #f9fbfd;
  transition: 0.3s;
}

/* ===== Action Buttons ===== */
.action-buttons {
  display: flex;
  gap: 5px;
  justify-content: center;
  flex-wrap: wrap;
}

.btn-sm {
  font-size: 13px;
  padding: 6px 10px;
  border-radius: 5px;
  margin: 2px;
  transition: 0.3s;
}

.btn-view {
  background: #2d4a70;
  color: #fff;
}

.btn-view:hover {
  background: #1f3555;
  color: #fff;
}

.btn-edit {
  background: #ffc107;
  color: #000;
}

.btn-edit:hover {
  background: #e0a800;
  color: #000;
}

.btn-delete {
  background: #dc3545;
  color: #fff;
}

.btn-delete:hover {
  background: #b02a37;
}

.btn-activate {
  background: #28a745;
  color: #fff;
}

.btn-activate:hover {
  background: #218838;
}

.btn-deactivate {
  background: #6c757d;
  color: #fff;
}

.btn-deactivate:hover {
  background: #545b62;
}

.btn-excel {
  background: #198754;
  color: #fff;
}

.btn-excel:hover {
  background: #157347;
}
</style>

<section>
    <div class="container">
        <h2>ALL BATCHES</h2>
        
        <!-- Filter Buttons -->
        <div class="filter-buttons">
            <a href="/admin/view-batch" class="btn btn-primary {{#if showAll}}active{{/if}}">
                All Batches
            </a>
            <a href="/admin/active-batches" class="btn btn-success">
                Active Batches
            </a>
            <a href="/admin/inactive-batches" class="btn btn-secondary">
                Inactive Batches
            </a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Centre Name</th>
                   
                    <th scope="col">Batch ID</th>
                    <th scope="col">Batch Name</th>
                    <th scope="col">No Of Students</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each batches }}
                <tr>
                    <td>{{this.centre.centreName}}</td>
                    
                    <td>{{this.batchId}}</td>
                    <td>{{this.batchName}}</td>
                    <td>{{this.nostudents}}</td>
                    <td>
                        {{#if this.active}}
                            <span class="status-badge status-active">ACTIVE</span>
                        {{else}}
                            <span class="status-badge status-inactive">INACTIVE</span>
                        {{/if}}
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a href="/admin/export-students-excel/{{this._id}}" class="btn btn-excel btn-sm">
                                <i class="fas fa-file-excel"></i>
                            </a>
                            <a href="/admin/view-bstudent/{{this._id}}" class="btn btn-view btn-sm">
                                <i class="fas fa-users"></i>
                            </a>
                            <a href="/admin/edit-batch/{{this._id}}" class="btn btn-edit btn-sm">
                                <i class="fa fa-edit"></i>
                            </a>
                            
                            {{#if this.active}}
                                <a href="/admin/deactivate-batch/{{this._id}}" 
                                   class="btn btn-deactivate btn-sm"
                                   onclick="return confirm('Deactivate this batch?');">
                                    <i class="fas fa-ban"></i>
                                </a>
                            {{else}}
                                <a href="/admin/activate-batch/{{this._id}}" 
                                   class="btn btn-activate btn-sm"
                                   onclick="return confirm('Activate this batch?');">
                                    <i class="fas fa-check"></i>
                                </a>
                            {{/if}}
                            
                            <a href="/admin/delete-batch/{{this._id}}" 
                               class="btn btn-delete btn-sm"
                               onclick="return confirm('Delete this batch permanently?');">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>