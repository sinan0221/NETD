<style>
/* ===== Section Styling ===== */
section {
  padding: 40px 20px;
  background-color: #f2f6fa;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
}

/* ===== Container (make it wider) ===== */
.container {
  background: #fff;
  padding: 25px;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.08);

  /* ✅ Wider layout */
  max-width: 95%;    
  margin: auto;
}

/* ===== Heading ===== */
.container h2 {
  color: #1f3555;
  font-weight: 700;
  margin-bottom: 20px;
  text-align: center;
  border-bottom: 2px solid #2d4a70;
  padding-bottom: 10px;
  font-size: 26px;
  letter-spacing: 1px;
}

/* ===== Add Button Top Right ===== */
.container .btn-success {
  background-color: #28a745;
  border: none;
  font-weight: 600;
  padding: 8px 16px;
  border-radius: 6px;
  transition: 0.3s;
}

.container .btn-success:hover {
  background-color: #218838;
}

/* ===== Table ===== */
.table {
  margin-top: 20px;
  border-radius: 8px;
  overflow: hidden;
  background: #fff;

  /* ✅ Make table use full width */
  width: 100%;
}

.table thead th {
  background: #1f3555;
  color: #fff;
  font-weight: 600;
  text-align: center;
  font-size: 15px;
  padding: 14px;
}

.table tbody td {
  text-align: center;
  vertical-align: middle;
  padding: 14px;
  font-size: 15px;
  color: #333;
  border-bottom: 1px solid #eee;
}

.table tbody tr:hover {
  background-color: #f9fbfd;
  transition: 0.3s;
}

/* ===== Action Buttons ===== */
.btn-sm {
  font-size: 13px;
  padding: 6px 10px;
  border-radius: 5px;
  margin: 2px;
  transition: 0.3s;
}

/* View button */
.btn-sm {
  background: #2d4a70;
  color: #fff;
}

.btn-sm:hover {
  background: #1f3555;
  color: #fff;
}

/* Delete button */
.btn-danger {
  background: #dc3545 !important;
  border: none;
}

.btn-danger:hover {
  background: #b02a37 !important;
}



</style>
<section>
    <div class="container">
        <h2>BATCHES</h2>
        <div class="d-flex justify-content-end">
        
        </div>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">Centre Name</th>
      <th scope="col">Batch No</th>
      <th scope="col">BATCH ID</th>
      <th scope="col">BATCH NAME</th>
      <th scope="col">No Of Students</th>
      <th scope="col">ACTION</th>
    </tr>
  </thead>
  <tbody>
    {{#each batches }}
    <tr>
      <td>{{this.centre.centreName}}</td>
      <td>{{this.batchNo}}</td>
      <td>{{this.batchId}}</td>
      <td>{{this.batchName}}</td>
      <td>{{this.nostudents}}</td>
      <td>
        <a href="/admin/export-students-excel/{{this._id}}" class="btn btn-success">
  <i class="fas fa-file-excel"></i> Export to Excel
</a>
        <a href="/admin/view-bstudent/{{this._id}}" class="btn btn-outline-dark btn-sm">View Students</a>

        <a href="/admin/edit-batch/{{this._id}}" class="btn btn-sm"> <i class="fa fa-edit"></i></a>
        <a href="/admin/delete-batch/{{this._id}}" 
     class="btn btn-danger btn-sm"
     onclick="return confirm('Are you sure you want to delete this batch?');">
     <i class="fas fa-trash"></i>

  </a>

      </td>
    </tr>
    {{/each}}
  
  </tbody>
</table>
    </div>
</section>