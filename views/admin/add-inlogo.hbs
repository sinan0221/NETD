<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add Institution Logo by Centre ID</h5>
                </div>
                <div class="card-body">
                    {{#if success}}
                    <div class="alert alert-success" role="alert">
                        Institution Logo added/updated successfully!
                    </div>
                    {{/if}}

                    <form action="/admin/add-inlogo" method="POST" enctype="multipart/form-data">
                        
                        <div class="form-group mb-3">
                            <label for="centreId" class="form-label">Centre ID (Numeric)</label>
                            <input type="number" 
                                   class="form-control" 
                                   id="centreId" 
                                   name="centreId" 
                                   placeholder="Enter the Centre ID" 
                                   required 
                                   min="1">
                            <small class="form-text text-muted">Use this ID to link the logo to a specific center.</small>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="logo" class="form-label">Upload Institution Logo (.jpg, .png)</label>
                            <input type="file" 
                                   class="form-control" 
                                   id="logo" 
                                   name="logo" 
                                   accept="image/jpeg, image/png" 
                                   required>
                            <small class="form-text text-muted">This file will be renamed using the Centre ID.</small>
                        </div>
                        
                        <button type="submit" class="btn btn-primary mt-3">Upload Logo</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>