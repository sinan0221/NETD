   <i class="fas fa-building"></i> Department
</a>

  </div>
</td>
<td>
<a href="/admin/view-cbatch/{{this._id}}" class="btn btn-outline-success btn-sm btn-action">
    Course Administration

  </a>
   <a href="/admin/view-tbatch/{{this._id}}" class="apply-certificate-btn btn btn-outline-success btn-sm btn-action">
                                   Exam Administration

                                </a>
</td>
        
     <td class="action-cell">


<div class="action-btn-group">
  
   <a href="/admin/export-students-excel/{{this._id}}" class="btn btn-success btn-sm">
  <i class="fa fa-file-excel"></i> 
</a>
  <a href="/admin/edit-center/{{this._id}}" class="btn btn-outline-info btn-sm btn-action">
    <i class="fa fa-edit"></i>
  </a>
  <a href="/admin/delete-center/{{this._id}}" class="btn btn-outline-danger btn-sm btn-action">
    <i class="fas fa-trash"></i>
  </a>
 

</div>
</td>


      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
