      color: #d00000;
      margin: 0;
    }

    .content {
      text-align: center;
    }

    .content img {
      display: block;
      margin: 0 auto 15px auto;
      width: 590px;
      height: 120px;
      object-fit: contain;
    }

    form {
      text-align: left;
      margin-top: 10px;
    }

    label {
      display: block;
      font-weight: 600;
      margin-top: 15px;
    }

    input[type="text"],
    input[type="email"],
    select {
      width: 100%;
      padding: 10px 12px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 15px;
      box-sizing: border-box;
    }

    .inline-input {
      display: flex;
      align-items: center;
      gap: 5px;
      width: 80%;
    }

    .inline-input input {
      flex: 1;
    }

    .inline-input button {
      background-color: #000;
      color: white;
      border: none;
      padding: 8px 12px;
      border-radius: 5px;
      cursor: pointer;
    }

    .inline-input button:hover {
      background-color: #d00000;
    }

    .submit-btn, #downloadPdf {
      width: 80%;
      margin-top: 20px;
      padding: 10px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .submit-btn {
      background-color: #007bff;
      color: white;
    }

    #downloadPdf {
      background-color: #d00000;
      color: white;
    }

    h1 {
      font-size: 22px;
      margin-bottom: 15px;
      text-transform: uppercase;
    }

    /* New styles for course items with delete buttons */
    .course-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 8px 12px;
      margin: 5px 0;
      background-color: #f8f9fa;
      border-radius: 6px;
      border: 1px solid #dee2e6;
    }

    .course-item span {
      flex-grow: 1;
    }

    .course-item .delete-btn {
      background-color: #dc3545;
      color: white;
      border: none;
      padding: 4px 8px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 12px;
      margin-left: 10px;
    }

    .course-item .delete-btn:hover {
      background-color: #c82333;
    }

    #courseList {
      margin-top: 10px;
      max-height: 200px;
      overflow-y: auto;
    }

    .course-select-container {
      position: relative;
    }

    .delete-course-btn {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      background-color: #dc3545;
      color: white;
      border: none;
      padding: 2px 8px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 12px;
      display: none;
    }

    .course-option:hover .delete-course-btn {
      display: inline-block;
    }

    /* Style for select with delete buttons */
    select option {
      position: relative;
      padding-right: 30px;
    }

    /* Alternative: Using a separate list display */
    .selected-courses-list {
      margin-top: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      padding: 10px;
      max-height: 150px;
      overflow-y: auto;
    }

    .selected-course {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 5px 10px;
      margin: 3px 0;
      background-color: #e9ecef;
      border-radius: 4px;
    }

    .remove-course-btn {
      background-color: #dc3545;
      color: white;
      border: none;
      padding: 2px 6px;
      border-radius: 3px;
      cursor: pointer;
      font-size: 12px;
    }

    .remove-course-btn:hover {
      background-color: #c82333;
    }
  </style>
