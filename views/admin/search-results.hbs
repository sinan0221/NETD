                            <a href="/admin/sdcertificate-preview/{{this._id}}" 
                               class="btn btn-warning btn-action-sm flex-grow-1">
                                <i class="fas fa-certificate me-1"></i> Certificate
                            </a>
                            
                            <a href="/admin/sdc-idcard-preview/{{this._id}}"
