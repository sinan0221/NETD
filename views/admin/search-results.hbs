                        <i class="fas fa-search me-2"></i>
                        Search Results
                    </h2>
                    <p class="mb-0">
                        <i class="fas fa-filter me-2"></i>
                        Searching for: <strong class="text-warning">"{{keyword}}"</strong>
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex justify-content-end gap-3">
                        <div class="text-center">
                            <h4 class="mb-0 text-white">{{results.length}}</h4>
                            <small class="text-light">Total Results</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Results -->
        {{#if results.length}}
            <div class="row">
                {{#each results}}
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="student-card">
                        <div class="d-flex align-items-start mb-3">
