<style>
/* Professional color palette for government website */
:root {
  --dark-blue: rgba(0,78,137,1);
  --golden-brown: rgba(176,149,114,1);
  --light-blue: rgba(0,78,137,0.1);
  --medium-blue: rgba(0,78,137,0.8);
  --dark-gray: #2d3748;
  --medium-gray: #4a5568;
  --light-gray: #e2e8f0;
  --white: #ffffff;
}

/* ===== Main Container ===== */
.view-batch-section {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #edf2f7 100%);
  padding: 40px 20px;
  font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
}

/* ===== Card Container ===== */
.batch-container {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  padding: 40px;
  max-width: 1400px;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  border: 1px solid #e2e8f0;
}

.batch-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--dark-blue), var(--medium-blue));
}

/* ===== Header Section ===== */
.batch-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40px;
  padding-bottom: 25px;
  border-bottom: 2px solid var(--light-gray);
}

.header-title {
  display: flex;
  align-items: center;
  gap: 20px;
}

.header-icon {
  background: linear-gradient(135deg, var(--dark-blue), var(--medium-blue));
  width: 60px;
  height: 60px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(0, 78, 137, 0.15);
}

.header-icon i {
  font-size: 28px;
  color: white;
}

.header-text h1 {
  color: var(--dark-blue);
  font-size: 32px;
  font-weight: 700;
  margin: 0 0 8px 0;
  letter-spacing: -0.5px;
}

.header-text p {
  color: var(--medium-gray);
  font-size: 16px;
  margin: 0;
  font-weight: 500;
}

.batch-count {
  background: linear-gradient(135deg, var(--dark-blue), var(--medium-blue));
  color: white;
  padding: 12px 28px;
  border-radius: 8px;
  font-weight: 600;
  font-size: 15px;
  box-shadow: 0 4px 12px rgba(0, 78, 137, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  gap: 10px;
  transition: all 0.3s ease;
}

.batch-count:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(0, 78, 137, 0.25);
}

/* ===== BATCH CARDS LAYOUT ===== */
.batch-cards-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
  gap: 30px;
  margin-top: 20px;
}

.batch-card {
  background: white;
  border-radius: 12px;
  border: 1px solid #e2e8f0;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
}

.batch-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  border-color: var(--dark-blue);
}

.batch-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--dark-blue), var(--medium-blue));
}

/* Card Header */
.batch-card-header {
  padding: 25px 30px 20px 30px;
  border-bottom: 1px solid #f1f5f9;
  position: relative;
}

.batch-card-title {
  display: flex;
  align-items: flex-start;
  gap: 15px;
  margin-bottom: 15px;
}

.batch-card-number {
  background: linear-gradient(135deg, var(--dark-blue), var(--medium-blue));
  color: white;
  width: 40px;
  height: 40px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 16px;
  box-shadow: 0 3px 8px rgba(0, 78, 137, 0.15);
  flex-shrink: 0;
}

.title-content {
  flex: 1;
  
}

.batch-id {
  font-family: 'Monaco', 'Courier New', monospace;
  background: rgba(0, 78, 137, 0.05);
  padding: 6px 12px;
  border-radius: 4px;
  border-left: 3px solid var(--golden-brown);
  color: var(--dark-blue);
  font-size: 14px;
  font-weight: 500;
  display: block;
  margin-bottom: 10px;
}

.batch-card-name {
  color: var(--dark-blue);
  font-weight: 700;
  font-size: 22px;
  margin: 0;
}

/* Card Body */
.batch-card-body {
  padding: 15px 30px 25px; /* top | left-right | bottom */
}


.action-section {
  margin-bottom: 25px;
}

.action-section:last-child {
  margin-bottom: 0;
}

.section-label {
  display: flex;
  align-items: center;
  gap: 10px;
  color: var(--dark-blue);
  font-weight: 600;
  font-size: 14px;
  margin-bottom: 15px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.section-label i {
  color: var(--dark-blue);
  font-size: 16px;
}

.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

/* ===== BUTTON STYLES (Professional Standard Colors) ===== */
.btn {
  padding: 12px 24px;
  border-radius: 6px;
  border: none;
  font-weight: 600;
  font-size: 14px;
  display: inline-flex;
  align-items: center;
  gap: 10px;
  transition: all 0.3s ease;
  text-decoration: none;
  cursor: pointer;
  justify-content: center;
  min-height: 48px;
  border: 1px solid transparent;
  font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
}

/* Primary Button (Dark Blue - Main Actions) */
.btn-primary {
  background-color: var(--dark-blue);
  color: white;
  box-shadow: 0 2px 4px rgba(0, 78, 137, 0.2);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 78, 137, 0.3);
  background-color: rgba(0, 68, 120, 1);
  color: white;
  text-decoration: none;
  border-color: rgba(0, 58, 110, 1);
}

/* Secondary Button (Golden Brown - Secondary Actions) */
.btn-secondary {
  background-color: var(--golden-brown);
  color: white;
  box-shadow: 0 2px 4px rgba(176, 149, 114, 0.2);
}

.btn-secondary:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(176, 149, 114, 0.3);
  background-color: rgba(156, 129, 94, 1);
  color: white;
  text-decoration: none;
  border-color: rgba(136, 109, 74, 1);
}

/* Success Button (Blue Variant - Positive Actions) */
.btn-success {
  background-color: rgba(0, 98, 157, 1);
  color: white;
  box-shadow: 0 2px 4px rgba(0, 98, 157, 0.2);
}

.btn-success:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 98, 157, 0.3);
  background-color: rgba(0, 88, 137, 1);
  color: white;
  text-decoration: none;
  border-color: rgba(0, 78, 117, 1);
}

/* Warning Button (Teal - Attention Actions) */
.btn-warning {
  background-color: rgba(0, 118, 158, 1);
  color: white;
  box-shadow: 0 2px 4px rgba(0, 118, 158, 0.2);
}

.btn-warning:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 118, 158, 0.3);
  background-color: rgba(0, 108, 138, 1);
  color: white;
  text-decoration: none;
  border-color: rgba(0, 98, 128, 1);
}

/* Danger Button (Dark Blue Variant - Cancel/Delete) */
.btn-danger {
  background-color: rgb(33, 101, 168);
  color: white;
  box-shadow: 0 2px 4px rgba(0, 58, 117, 0.2);
}

.btn-danger:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 58, 117, 0.3);
  background-color: rgba(0, 48, 107, 1);
  color: white;
  text-decoration: none;
  border-color: rgba(0, 38, 97, 1);
}

/* Info Button (Medium Blue - Informational) */
.btn-info {
  background-color: rgba(0, 108, 167, 1);
  color: white;
  box-shadow: 0 2px 4px rgba(0, 108, 167, 0.2);
}

.btn-info:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 108, 167, 0.3);
  background-color: rgba(0, 98, 147, 1);
  color: white;
  text-decoration: none;
  border-color: rgba(0, 88, 137, 1);
}

/* Disabled state for all buttons */
.btn:disabled,
.btn[disabled] {
  background-color: #a0aec0;
  color: #718096;
  opacity: 0.7;
  cursor: not-allowed;
  transform: none !important;
  box-shadow: none !important;
  border-color: transparent !important;
}

/* Small button variant */
.btn-sm {
  padding: 8px 16px;
  font-size: 12px;
  min-height: 40px;
}

/* Full-width buttons in cards */
.action-buttons .btn {
  flex: 1;
  min-width: 140px;
}

/* ===== STATUS INDICATORS ===== */
.status-badge {
  position: absolute;
  top: 20px;
  right: 30px;
  padding: 6px 15px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.status-active {
  background: linear-gradient(135deg, rgba(0, 98, 157, 1), rgba(0, 88, 137, 1));
  color: white;
}

.status-inactive {
  background: linear-gradient(135deg, #718096, #4a5568);
  color: white;
}

/* ===== EMPTY STATE ===== */
.empty-state {
  text-align: center;
  padding: 60px 40px;
  grid-column: 1 / -1;
}

.empty-icon {
  font-size: 64px;
  color: #cbd5e0;
  margin-bottom: 20px;
}

.empty-state h3 {
  color: var(--dark-blue);
  font-size: 24px;
  margin-bottom: 12px;
  font-weight: 600;
}

.empty-state p {
  color: var(--medium-gray);
  font-size: 16px;
  max-width: 400px;
  margin: 0 auto 30px;
  line-height: 1.6;
}

/* ===== TEXT MUTED ===== */
.text-muted {
  color: #718096;
  font-size: 14px;
  font-style: italic;
  padding: 12px;
  text-align: center;
  display: block;
  background: #f8fafc;
  border-radius: 6px;
  border: 1px dashed #e2e8f0;
}

/* ===== RESPONSIVE DESIGN ===== */
@media (max-width: 1200px) {
  .batch-cards-container {
    grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
  }
}

@media (max-width: 992px) {
  .batch-cards-container {
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 25px;
  }
  
  .batch-card-header,
  .batch-card-body {
    padding: 20px 25px;
  }
}

@media (max-width: 768px) {
  .view-batch-section {
    padding: 20px 15px;
  }
  
  .batch-container {
    padding: 25px 20px;
    border-radius: 8px;
  }
  
  .batch-header {
    flex-direction: column;
    gap: 20px;
    text-align: center;
  }
  
  .header-title {
    flex-direction: column;
    gap: 15px;
  }
  
  .batch-cards-container {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .action-buttons .btn {
    width: 100%;
  }
  
  .status-badge {
    position: relative;
    top: 0;
    right: 0;
    margin-bottom: 15px;
    display: inline-block;
  }
}

@media (max-width: 480px) {
  .header-text h1 {
    font-size: 26px;
  }
  
  .batch-count {
    padding: 10px 20px;
    font-size: 14px;
  }
  
  .batch-card-name {
    font-size: 18px;
  }
  
  .btn {
    padding: 10px 18px;
    font-size: 13px;
  }
  
  .btn-sm {
    padding: 6px 12px;
    font-size: 11px;
  }
}

/* ===== ANIMATIONS ===== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.batch-card {
  animation: fadeIn 0.5s ease-out forwards;
  opacity: 0;
}

.batch-card:nth-child(1) { animation-delay: 0.1s; }
.batch-card:nth-child(2) { animation-delay: 0.2s; }
.batch-card:nth-child(3) { animation-delay: 0.3s; }
.batch-card:nth-child(4) { animation-delay: 0.4s; }
.batch-card:nth-child(5) { animation-delay: 0.5s; }
.batch-card:nth-child(6) { animation-delay: 0.6s; }
.batch-card:nth-child(7) { animation-delay: 0.7s; }
.batch-card:nth-child(8) { animation-delay: 0.8s; }
.batch-card:nth-child(9) { animation-delay: 0.9s; }
.batch-card:nth-child(10) { animation-delay: 1s; }

/* ===== LOADING STATE ===== */
.loading-skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 4px;
  height: 20px;
  margin: 8px 0;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* ===== PRINT STYLES ===== */
@media print {
  .view-batch-section {
    background: white;
    padding: 0;
  }
  
  .batch-container {
    box-shadow: none;
    border: 1px solid #ddd;
  }
  
  .btn {
    display: none;
  }
  
  .batch-card {
    break-inside: avoid;
    margin-bottom: 20px;
    box-shadow: none;
    border: 1px solid #ddd;
  }
}
</style>

<section class="view-batch-section">
    <div class="batch-container">
        <!-- Header -->
        <div class="batch-header">
            <div class="header-title">
                <div class="header-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="header-text">
                    <h1>BATCH SCHEDULES</h1>
                    <p>View and manage all training batch timetables</p>
                </div>
            </div>
            <div class="batch-count">
                <i class="fas fa-layer-group"></i>
                <span>{{batches.length}} Batches Available</span>
            </div>
        </div>

        <!-- Batch Cards Grid -->
        <div class="batch-cards-container">
            {{#if batches.length}}
                {{#each batches}}
                <div class="batch-card">
                    {{#if this.active}}
                    <span class="status-badge status-active">Active</span>
                    {{else}}
                    <span class="status-badge status-inactive">Inactive</span>
                    {{/if}}
                    
                    <div class="batch-card-header">
                        <div class="batch-card-title">
                            <div class="batch-card-number">{{@index_1}}</div>
                            <div class="title-content">
                                <span class="batch-id">BATCH ID: {{this.batchId}}</span>
                                <h3 class="batch-card-name">{{this.batchName}}</h3>
                            </div>
                        </div>
                    </div>
                    
                    <div class="batch-card-body">
                        <!-- Timetable Section -->
                        <div class="action-section">
                            <div class="section-label">
                                <i class="fas fa-clock"></i>
                                <span>Timetable</span>
                            </div>
                            <div class="action-buttons">
                                <a href="/admin/add-timetable" class="btn btn-warning">
                                    <i class="fas fa-plus"></i> Add Time Table
                                </a>
                                {{#if this.timetable}}
                                <a href="/admin/preview-timetable/{{this._id}}" target="_blank" class="btn btn-danger">
                                    <i class="fas fa-file-pdf"></i> View PDF
                                </a>
                                {{else}}
                                <span class="text-muted">No timetable added</span>
                                {{/if}}
                            </div>
                        </div>
                        
                        <!-- Hall Ticket Section -->
                        <div class="action-section">
                            <div class="section-label">
                                <i class="fas fa-ticket-alt"></i>
                                <span>Hall Tickets</span>
                            </div>

                            <div class="action-buttons">
                                {{#if this.appliedForHallTicket}}
                                    <!-- Applied -->
                                    <button class="btn btn-success" disabled>
                                        <i class="fas fa-check-circle"></i> Applied
                                    </button>

                                    <!-- Download ENABLED -->
                                    <a href="/admin/batch-halltickets-download/{{this._id}}" class="btn btn-primary">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                {{else}}
                                    <!-- Not Applied -->
                                    <button class="btn btn-warning" onclick="openHallTicketModal('{{this._id}}')">
                                        <i class="fas fa-ticket-alt"></i> Apply Hall Ticket
                                    </button>
                                    
                                    <!-- Download DISABLED -->
                                    <button class="btn btn-primary" disabled>
                                        <i class="fas fa-download"></i> Download
                                    </button>
                                {{/if}}
                            </div>
                        </div>
                        
                        <!-- Question Paper Section -->
                        <div class="action-section">
                            <div class="section-label">
                                <i class="fas fa-file-alt"></i>
                                <span>Question Papers</span>
                            </div>

                            <div class="action-buttons">
                                <a href="/admin/add-question-paper/{{this._id}}" class="btn btn-warning">
                                    <i class="fas fa-plus"></i> Add Question Paper
                                </a>

                                {{#if this.questionPapers}}
                                    <a href="/admin/view-question-papers/{{this._id}}" class="btn btn-danger">
                                        <i class="fas fa-eye"></i> View ({{this.questionPapers.length}})
                                    </a>
                                {{else}}
                                    <!-- Disabled placeholder button -->
                                    <button class="btn btn-secondary" disabled>
                                        <i class="fas fa-ban"></i> No Question Papers
                                    </button>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{else}}
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="far fa-calendar-times"></i>
                    </div>
                    <h3>No Batches Found</h3>
                    <p>There are currently no batches scheduled. Please check back later.</p>
                </div>
            {{/if}}
        </div>
    </div>
</section>

