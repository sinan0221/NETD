<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Timetable - {{batch.batchName}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .timetable-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 25px;
        }
        .subject-card {
            border-left: 4px solid #0d6efd;
            transition: all 0.3s ease;
        }
        .subject-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .time-badge {
            background: #e3f2fd;
            color: #1976d2;
            font-weight: bold;
        }
        .printable-timetable {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    {{> user-header}}
    
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="timetable-header mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-2"><i class="fas fa-calendar-alt me-2"></i>Exam Timetable</h2>
                            <h4 class="mb-0">{{batch.timetable.examName}}</h4>
                        </div>
                        <div class="text-end">
                            <h5 class="mb-1">{{batch.batchName}}</h5>
                            <p class="mb-0">Batch No: {{batch.batchNo}}</p>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-3">
                            <p class="mb-1"><i class="fas fa-graduation-cap me-2"></i> {{batch.timetable.examType}} Exam</p>
                        </div>
                        <div class="col-md-3">
                            <p class="mb-1"><i class="fas fa-calendar-day me-2"></i> 
                                {{#formatDate batch.timetable.examDate 'DD MMMM YYYY'}}{{/formatDate}}
                            </p>
                        </div>
                        <div class="col-md-3">
                            <p class="mb-1"><i class="fas fa-university me-2"></i> A.Y. {{batch.timetable.academicYear}}</p>
                        </div>
                        <div class="col-md-3">
                            <p class="mb-1"><i class="fas fa-layer-group me-2"></i> {{batch.timetable.semester}}</p>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <button class="btn btn-primary" onclick="window.print()">
                            <i class="fas fa-print me-1"></i> Print Timetable
                        </button>
                        <button class="btn btn-success" onclick="downloadTimetable()">
                            <i class="fas fa-download me-1"></i> Download PDF
                        </button>
                    </div>
                    <div>
                        <a href="/user/add-timetable/{{batch._id}}" class="btn btn-warning me-2">
                            <i class="fas fa-edit me-1"></i> Edit
                        </a>
                        <a href="/user/view-timetable" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back
                        </a>
                    </div>
                </div>

                <!-- Printable Timetable -->
                <div class="printable-timetable" id="printableTimetable">
                    <div class="text-center mb-4">
                        <h3 class="text-primary">NATIONAL EDUCATION TRAINING & DEVELOPMENT</h3>
                        <h4>EXAMINATION TIMETABLE</h4>
                        <hr>
                        <div class="row">
                            <div class="col-md-6 text-start">
                                <p><strong>Batch:</strong> {{batch.batchName}}</p>
                                <p><strong>Batch No:</strong> {{batch.batchNo}}</p>
                            </div>
                            <div class="col-md-6 text-end">
                                <p><strong>Exam:</strong> {{batch.timetable.examName}}</p>
                                <p><strong>Date:</strong> {{#formatDate batch.timetable.examDate 'DD/MM/YYYY'}}{{/formatDate}}</p>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th width="5%">S.No</th>
                                    <th width="30%">Subject Name</th>
                                    <th width="15%">Subject Code</th>
                                    <th width="15%">Date</th>
                                    <th width="20%">Time</th>
                                    <th width="15%">Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each batch.timetable.subjects}}
                                <tr>
                                    <td>{{add @index 1}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.code}}</td>
                                    <td>{{#formatDate this.date 'DD/MM/YYYY'}}{{/formatDate}}</td>
                                    <td>{{this.time}}</td>
                                    <td>{{this.duration}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Instructions:</h5>
                                <ul>
                                    <li>Report to exam hall 30 minutes before exam time</li>
                                    <li>Carry your ID card and hall ticket</li>
                                    <li>Electronic devices are not allowed</li>
                                    <li>Follow COVID-19 safety protocols</li>
                                </ul>
                            </div>
                            <div class="col-md-6 text-end">
                                <p><strong>Signature of Exam Controller</strong></p>
                                <p>_________________________</p>
                                <p>NATIONAL EDUCATION TRAINING & DEVELOPMENT</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mobile/Web View -->
                <div class="row mt-4 d-none d-md-flex">
                    {{#each batch.timetable.subjects}}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card subject-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title mb-1">{{this.name}}</h5>
                                        <p class="text-muted mb-0">{{this.code}}</p>
                                    </div>
                                    <span class="badge time-badge">{{this.time}}</span>
                                </div>
                                
                                <div class="mb-3">
                                    <p class="mb-1"><i class="far fa-calendar text-primary me-2"></i> 
                                        <strong>{{#formatDate this.date 'DD MMM YYYY'}}{{/formatDate}}</strong>
                                    </p>
                                    <p class="mb-1"><i class="far fa-clock text-success me-2"></i> Duration: {{this.duration}}</p>
                                    <p class="mb-0"><i class="fas fa-trophy text-warning me-2"></i> Max Marks: {{this.maxMarks}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <script>
        function downloadTimetable() {
            const element = document.getElementById('printableTimetable');
            const options = {
                margin: 10,
                filename: 'Timetable-{{batch.batchName}}-{{#formatDate batch.timetable.examDate 'YYYY-MM-DD'}}{{/formatDate}}.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };
            
            html2pdf().from(element).set(options).save();
        }
    </script>
</body>
</html>