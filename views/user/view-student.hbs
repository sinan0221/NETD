<style>
/* ===== Students List Section ===== */
.student-table {
  width: 100%;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  background: #fff;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
}

/* ===== Table Header ===== */
.student-table thead th {
  background: #1f3555;
  color: #fff;
  font-weight: 600;
  font-size: 15px;
  padding: 14px;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* ===== Table Body ===== */
.student-table tbody td {
  text-align: center;
  vertical-align: middle;
  padding: 12px;
  font-size: 15px;
  color: #333;
  border-bottom: 1px solid #eee;
  transition: background 0.3s ease;
}

/* ===== Activated Student Row - Light Green ===== */
.student-table tbody tr.activated-student {
  background: #f0fff4 !important;
  border-left: 4px solid #38a169;
}

.student-table tbody tr.activated-student:hover {
  background: #e6ffed !important;
}

/* ===== Non-Activated Student Row - Light Red ===== */
.student-table tbody tr.non-activated-student {
  background: #fff5f5 !important;
  border-left: 4px solid #e53e3e;
}

.student-table tbody tr.non-activated-student:hover {
  background: #fed7d7 !important;
}

/* ===== Photo Column ===== */
.student-photo {
  width: 50px;
  height: 50px;
  object-fit: cover;
  border-radius: 50%;
  border: 2px solid #1f3555;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  transition: transform 0.3s ease;
}

.student-photo:hover {
  transform: scale(1.1);
}

/* ===== Add Student Button ===== */
.btn.btn-sm {
  border: 2px solid #1f3555;
  color: #1f3555;
  font-weight: 600;
  padding: 6px 14px;
  border-radius: 6px;
  transition: 0.3s;
}

.btn.btn-sm:hover {
  background: #1f3555;
  color: #fff;
}

/* ===== Delete Button ===== */
.btn-danger.btn-sm {
  background: #dc3545;
  border: none;
  padding: 6px 12px;
  font-size: 13px;
  font-weight: 600;
  border-radius: 6px;
  transition: all 0.3s ease;
}

.btn-danger.btn-sm:hover {
  background: #b02a37;
  transform: scale(1.05);
}

/* ===== Status Badge ===== */
.status-badge {
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 12px;
  font-weight: 600;
}

.status-active {
  background: #38a169;
  color: white;
}

.status-inactive {
  background: #e53e3e;
  color: white;
}
</style>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Students List</h2>
    <a href="/user/add-student" class="btn btn-sm">Add Student</a>
  </div>

  <table class="table table-bordered align-middle student-table">
    <thead>
      <tr>
        <th>#</th>
        <th>Reg No</th>
        <th>Name</th>
        <th>Course</th>
        <th>Admission Year</th>
        <th>Status</th>
        <th>Photo</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each students}}
      <tr class="{{#if this.activated}}activated-student{{else}}non-activated-student{{/if}}">
        <td>{{inc @index}}</td>
        <td>{{this.regNo}}</td>
        <td>{{this.fullName}}</td>
        <td>{{this.batchDetails.batchName}}</td>
        <td>{{this.admissionYear}}</td>
        <td>
          {{#if this.activated}}
            <span class="status-badge status-active">Activated</span>
          {{else}}
            <span class="status-badge status-inactive">Not Activated</span>
          {{/if}}
        </td>
        <td>
          <img src="/studentImages/{{this._id}}.jpg"
               alt="photo"
               class="student-photo">
        </td>
        <td>
          <a href="/user/delete-student/{{this._id}}" 
             class="btn btn-danger btn-sm"
             onclick="return confirm('Are you sure you want to delete this student?');">
             <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>