<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - NETD</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Reset Password Page - Premium Blue Theme */
        :root {
            --primary-blue: #1a365d;
            --accent-blue: #2c5282;
            --light-blue: #4299e1;
            --gold-accent: #d4af37;
            --dark-text: #2d3748;
            --light-text: #ffffff;
            --gray-light: #f7fafc;
            --gray-border: #e2e8f0;
            --shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            --shadow-hover: 0 15px 35px rgba(0, 0, 0, 0.15);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* NUCLEAR OPTION - HIDE ALL NAVBARS */
        nav, .navbar, [class*="navbar"], [class*="nav"], header, .header, [class*="header"] {
            display: none !important;
            visibility: hidden !important;
            opacity: 0 !important;
            height: 0 !important;
            width: 0 !important;
            position: absolute !important;
            left: -9999px !important;
        }

        /* Global Styles */
        body {
            font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #eef2f7 50%, #e5eaf2 100%);
            color: var(--dark-text);
            line-height: 1.6;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            position: fixed; /* Prevent scrolling */
            width: 100%;
            height: 100%;
            overflow: hidden; /* Disable scrolling */
        }

        /* Remove any default body padding */
        body {
            padding-top: 0 !important;
            margin-top: 0 !important;
        }

        /* Background Pattern */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                radial-gradient(circle at 25% 25%, rgba(66, 153, 225, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 75% 75%, rgba(212, 175, 55, 0.08) 0%, transparent 50%);
            z-index: -1;
        }

        /* Row Layout */
        .row {
            min-height: 100vh;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 2rem 1rem;
            overflow: hidden;
        }

        /* Column centering */
        .col-md-6 {
            max-width: 450px;
            width: 100%;
            margin: 0 auto;
        }

        /* Main Container - Premium Card */
        .container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: var(--shadow);
            padding: 3rem 2.5rem;
            margin: 0;
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: slideUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
            opacity: 0;
            transform: translateY(30px);
            max-height: 85vh;
        }

        /* Gold Top Border */
        .container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--gold-accent) 0%, #fbbf24 50%, var(--gold-accent) 100%);
        }

        /* Header Styling */
        h2 {
            color: var(--primary-blue);
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
            position: relative;
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--light-blue) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        h2::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, var(--gold-accent) 0%, #fbbf24 100%);
            border-radius: 2px;
        }

        /* Description Text */
        .description {
            text-align: center;
            color: #4a5568;
            margin-bottom: 2rem;
            font-size: 0.95rem;
            line-height: 1.5;
        }

        /* Logo/Image Styling */
        .netd-logo {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .netd-logo img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            padding: 4px;
            background: var(--light-text);
            box-shadow: 0 6px 20px rgba(212, 175, 55, 0.3);
            transition: var(--transition);
        }

        .netd-logo img:hover {
            transform: scale(1.08);
            box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
        }

        /* Form Styling */
        form {
            width: 100%;
        }

        /* Form Groups */
        .form-group {
            margin-bottom: 1.8rem;
            position: relative;
        }

        /* Input Fields */
        .form-control {
            width: 100%;
            padding: 14px 16px 14px 45px; /* Left padding for icon */
            border: 2px solid var(--gray-border);
            border-radius: 12px;
            font-size: 1rem;
            color: var(--dark-text);
            background-color: var(--gray-light);
            transition: var(--transition);
            box-sizing: border-box;
            font-weight: 500;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--light-blue);
            box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
            background-color: var(--light-text);
            transform: translateY(-2px);
        }

        .form-control::placeholder {
            color: #a0aec0;
            font-weight: 400;
        }

        /* Input Icons */
        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--light-blue);
            z-index: 2;
            pointer-events: none;
        }

        .form-group {
            position: relative;
        }

        /* Error Message */
        .err {
            background: linear-gradient(135deg, #fed7d7 0%, #feb2b2 100%);
            color: #c53030;
            padding: 12px 16px;
            border-radius: 8px;
            border-left: 4px solid #e53e3e;
            margin: 1.5rem 0;
            font-weight: 500;
            text-align: center;
            animation: shake 0.5s ease-in-out;
        }

        /* Success Message */
        .success {
            background: linear-gradient(135deg, #c6f6d5 0%, #9ae6b4 100%);
            color: #22543d;
            padding: 12px 16px;
            border-radius: 8px;
            border-left: 4px solid #38a169;
            margin: 1.5rem 0;
            font-weight: 500;
            text-align: center;
        }

        /* Button Styling */
        .btn {
            padding: 14px 32px;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 1rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--accent-blue) 100%);
            color: var(--light-text);
            box-shadow: var(--shadow);
        }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--accent-blue) 0%, var(--primary-blue) 100%);
            transform: translateY(-3px);
            box-shadow: var(--shadow-hover);
        }

        .btn-primary:hover::before {
            left: 100%;
        }

        .btn-primary:active {
            transform: translateY(-1px);
        }

        /* Password Requirements - Simplified */
        .password-requirements {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 1.5rem;
            font-size: 0.85rem;
        }

        .password-requirements h4 {
            margin: 0 0 10px 0;
            color: var(--primary-blue);
            font-size: 0.9rem;
            font-weight: 600;
        }

        .requirement {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 5px;
            color: #4a5568;
        }

        .requirement i {
            font-size: 0.8rem;
            color: #cbd5e0;
        }

        .requirement.valid i {
            color: #38a169;
        }

        /* Back Link */
        .back-link {
            text-align: center;
            margin-top: 1.5rem;
        }

        .back-link a {
            color: var(--light-blue);
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 0.95rem;
        }

        .back-link a:hover {
            color: var(--primary-blue);
            transform: translateX(-5px);
        }

        /* Animations */
        @keyframes slideUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-8px); }
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                margin: 1rem;
                padding: 2.5rem 2rem;
                max-height: 80vh;
            }
            
            h2 {
                font-size: 2rem;
            }
            
            .description {
                font-size: 0.9rem;
            }
        }

        @media (max-width: 576px) {
            .row {
                padding: 1rem;
                height: 100vh;
            }
            
            .container {
                padding: 2rem 1.5rem;
                border-radius: 16px;
                max-height: 75vh;
                overflow-y: auto;
            }
            
            h2 {
                font-size: 1.8rem;
                margin-bottom: 1.2rem;
            }
            
            .form-control {
                padding: 12px 14px 12px 40px;
            }
            
            .netd-logo img {
                width: 70px;
                height: 70px;
            }
            
            .btn {
                padding: 12px 24px;
                font-size: 0.95rem;
            }
            
            .input-icon {
                left: 12px;
                font-size: 0.9rem;
            }
        }

        /* Loading State */
        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        /* Floating Elements Animation */
        .container {
            animation-delay: 0.1s;
        }

        .netd-logo img {
            animation: float 4s ease-in-out infinite;
        }

        /* Prevent scrolling */
        .no-scroll {
            overflow: hidden !important;
            position: fixed !important;
            width: 100% !important;
            height: 100% !important;
        }

        /* Toggle Password Visibility */
        .toggle-password {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #a0aec0;
            cursor: pointer;
            z-index: 2;
            transition: var(--transition);
        }

        .toggle-password:hover {
            color: var(--light-blue);
        }

        /* Password Match Indicator */
        .password-match {
            font-size: 0.8rem;
            margin-top: 5px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .password-match.mismatch {
            color: #e53e3e;
        }

        .password-match.match {
            color: #38a169;
        }
    </style>
</head>
<body>
    <!-- JavaScript to remove any nav elements and prevent scrolling -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Remove nav elements
            const navElements = document.querySelectorAll('nav, .navbar, header, .header, [class*="navbar"], [class*="nav"]');
            navElements.forEach(element => {
                element.style.display = 'none';
                element.remove();
            });
            
            // Prevent scrolling on touch devices
            document.body.addEventListener('touchmove', function(e) {
                e.preventDefault();
            }, { passive: false });
            
            // Prevent scrolling with mouse wheel
            document.body.addEventListener('wheel', function(e) {
                e.preventDefault();
            }, { passive: false });
            
            // Add no-scroll class to body
            document.body.classList.add('no-scroll');
        });
    </script>

    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="container mt-5">
                <!-- Logo -->
                <div class="netd-logo">
                    <img src="/images/netd.jpeg" alt="NETD Logo" onerror="this.style.display='none'">
                </div>

                <h2 class="text-center">Reset Password</h2>
                
                <p class="description">
                    Create a new password for your account.
                </p>

                <!-- Password Requirements - Simplified -->
                <div class="password-requirements">
                    <h4>Password Requirements:</h4>
                    <div class="requirement" id="req-length">
                        <i class="fas fa-circle"></i>
                        <span>At least 6 characters</span>
                    </div>
                </div>

                <form action="/user/reset-password/{{id}}" method="post" id="resetForm">
                    <!-- New Password -->
                    <div class="form-group">
                        <i class="fas fa-lock input-icon"></i>
                        <input
                            type="password"
                            name="password"
                            class="form-control"
                            id="password"
                            placeholder="New Password"
                            required
                            autocomplete="new-password"
                        >
                        <button type="button" class="toggle-password" onclick="togglePassword('password')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group">
                        <i class="fas fa-lock input-icon"></i>
                        <input
                            type="password"
                            name="confirmPassword"
                            class="form-control"
                            id="confirmPassword"
                            placeholder="Confirm New Password"
                            required
                            autocomplete="new-password"
                        >
                        <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword')">
                            <i class="fas fa-eye"></i>
                        </button>
                        <div class="password-match" id="passwordMatch"></div>
                    </div>

                    {{#if err}}
                        <p class="err">{{err}}</p>
                    {{/if}}

                    {{#if success}}
                        <p class="success">{{success}}</p>
                    {{/if}}

                    <button type="submit" class="btn btn-primary" id="submitBtn">
                        <i class="fas fa-key"></i>Update Password
                    </button>

                    <div class="back-link">
                        <a href="/user/login">
                            <i class="fas fa-arrow-left"></i>Back to Login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Toggle password visibility
        function togglePassword(fieldId) {
            const input = document.getElementById(fieldId);
            const icon = input.nextElementSibling.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Check password requirements (simplified)
        function checkPasswordRequirements(password) {
            return {
                length: password.length >= 6
            };
        }

        // Update requirement indicator
        function updateRequirementIndicator() {
            const password = document.getElementById('password').value;
            const requirements = checkPasswordRequirements(password);
            const lengthElement = document.getElementById('req-length');
            
            if (lengthElement) {
                const icon = lengthElement.querySelector('i');
                if (requirements.length) {
                    icon.classList.add('fa-check-circle');
                    icon.classList.remove('fa-circle');
                    icon.style.color = '#38a169';
                } else {
                    icon.classList.remove('fa-check-circle');
                    icon.classList.add('fa-circle');
                    icon.style.color = '#cbd5e0';
                }
            }
        }

        // Check password match
        function checkPasswordMatch() {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const matchElement = document.getElementById('passwordMatch');
            
            if (confirmPassword.length === 0) {
                matchElement.textContent = '';
                matchElement.className = 'password-match';
                return true;
            }
            
            if (password !== confirmPassword) {
                matchElement.innerHTML = '<i class="fas fa-exclamation-circle"></i> Passwords do not match';
                matchElement.className = 'password-match mismatch';
                return false;
            } else {
                matchElement.innerHTML = '<i class="fas fa-check-circle"></i> Passwords match';
                matchElement.className = 'password-match match';
                return true;
            }
        }

        // Form validation
        function validateForm() {
            const password = document.getElementById('password').value;
            const requirements = checkPasswordRequirements(password);
            const passwordsMatch = checkPasswordMatch();
            
            // Check requirements are met
            const requirementsMet = requirements.length;
            
            // Enable/disable submit button
            const submitBtn = document.getElementById('submitBtn');
            if (requirementsMet && passwordsMatch && password.length > 0) {
                submitBtn.disabled = false;
                return true;
            } else {
                submitBtn.disabled = true;
                return false;
            }
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('password');
            const confirmInput = document.getElementById('confirmPassword');
            
            passwordInput.addEventListener('input', function() {
                updateRequirementIndicator();
                checkPasswordMatch();
                validateForm();
            });
            
            confirmInput.addEventListener('input', function() {
                checkPasswordMatch();
                validateForm();
            });
            
            // Initial validation
            validateForm();
            
            // Focus on first input
            passwordInput.focus();
        });

        // Additional scrolling prevention
        window.addEventListener('scroll', function() {
            window.scrollTo(0, 0);
        });
        
        // Prevent keyboard scrolling
        window.addEventListener('keydown', function(e) {
            if ([32, 33, 34, 35, 36, 37, 38, 39, 40].indexOf(e.keyCode) > -1) {
                e.preventDefault();
            }
        }, false);
    </script>
</body>
</html>