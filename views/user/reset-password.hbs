<h2>Reset Password</h2>

<form action="/user/reset-password/{{id}}" method="post">

  <div class="form-group">
    <input
      type="password"
      name="password"
      class="form-control"
      placeholder="New Password"
      required
    >
  </div>

  <div class="form-group">
    <input
      type="password"
      name="confirmPassword"
      class="form-control"
      placeholder="Confirm New Password"
      required
    >
  </div>

  {{#if err}}
    <p class="err">{{err}}</p>
  {{/if}}

  <button class="btn btn-primary">Update Password</button>

</form>
