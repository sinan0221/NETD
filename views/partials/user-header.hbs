<script>
  // Toggle fee card
  document.getElementById('feeLink').addEventListener('click', function(e) {
    e.preventDefault();
    const feeCard = document.getElementById('feeCard');
    feeCard.style.display = feeCard.style.display === 'none' ? 'block' : 'none';
  });

  // Hide fee card
  function hideFeeCard() {
    document.getElementById('feeCard').style.display = 'none';
  }

  // Copy to clipboard
  function copyToClipboard() {
    const input = document.getElementById('paymentLinkInput');
    input.select();
    document.execCommand('copy');
    
    // Show copied message
    const btn = event.target.closest('button');
    const originalHTML = btn.innerHTML;
    btn.innerHTML = '<i class="fas fa-check"></i>';
    btn.classList.remove('btn-primary');
    btn.classList.add('btn-success');
    
    setTimeout(() => {
      btn.innerHTML = originalHTML;
      btn.classList.remove('btn-success');
      btn.classList.add('btn-primary');
    }, 2000);
  }

  // Hide card when clicking outside
  document.addEventListener('click', function(e) {
    const feeCard = document.getElementById('feeCard');
    const feeLink = document.getElementById('feeLink');
    
    if (!feeCard.contains(e.target) && e.target !== feeLink && !feeLink.contains(e.target)) {
      feeCard.style.display = 'none';
    }
  });
</script>